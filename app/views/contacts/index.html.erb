
<h1>Welcome </h1>
<% if session[:user_id].nil?%>
<%= form_tag '/login' do%>
<% if flash[:error] %>
<p><%= flash[:error]%></p>
<% end %>
<% if flash[:message]%>
<p><%= flash[:message]%></p>
<% end %>
Email:<%= text_field_tag :email%><br>
Password:
<%= password_field_tag :password%><br>
<%= submit_tag "Log In"%>
<% end %>
<% else %>
<p>Hi <%= current_user.name%> you are logged in!</p>
<p><%= current_user.name %></p>
<%= button_to "View Table" %><br>
<%= button_to "View Leagu" %><br>

<%= button_to "Log Out",:controller => 'sessions', :action => 'destroy' %><br>
<button><a href="/contacts/new">Create New Contact</a></button>
<button><a href="/contacts/edit">Update Contact</a></button>
<button><a href="/contacts/show" >View Contact</a></button>

<% end %>
