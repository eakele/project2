<% if flash[:errors] %>
    <p> <%= flash[:errors] %></p>
<% end %>
<h1>Newform</h1>
<%= form_for :contact, url: '/contacts' do |f| %>
<div class="field">
  <%= f.label :first_name %><br>
  <%= f.text_field :first_name %>
</div>
<div class="field">
  <%= f.label :last_name %><br>
  <%= f.text_field :last_name %>
</div>
<div class="field">
  <%= f.label :email %><br>
  <%= f.text_field :email %>
</div>
<div class="field">
  <%= f.label :phone_mobile %><br>
  <%= f.text_field :phone_mobile %>
</div>
<div class="actions">
  <%= f.submit %>
</div>
<% end %>
