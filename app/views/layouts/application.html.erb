<!DOCTYPE html>
<html>
    <head>
        <title></title>
        <%= stylesheet_link_tag 'application', media: 'all',
                                           'data-turbolinks-track' => true %>
        <%= csrf_meta_tags %>
        <%= javascript_include_tag 'application' %>
    </head>
    <body>
        <div id="header">
            <h1>Football</h1>
        </div>
        <nav>
            <ul id="nav">
                <%= button_to "Edit Contact", edit_contact_path(session[:user_id]),:class => "button", :method => :get %>
                <%= button_to "Log in", login_path %>
                <%= button_to "Log Out",:controller => 'sessions', :action => 'destroy' %>
                <%= button_to "Create New Contact",new_contact_path,:class => "button", :method => :get %>
                <%= button_to "Home",root_path,:class => "button", :method => :get %>
                <div class="selected-team">
                    <button id="players" type="submit">View Players</button>
                </div>
            </ul>

        </nav>

        <div id="section">
            <%= yield %>
        </div>
    </body>
</html>
